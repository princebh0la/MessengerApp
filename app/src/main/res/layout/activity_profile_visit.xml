<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileVisitActivity"
    android:paddingTop="26dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorGrey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cover_image_profile_visit"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover">

            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_profile_visit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/username_profile_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image_profile_visit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="username"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lv_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv1"
        android:gravity="center_horizontal"
        android:background="@color/colorProfile"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/get_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center">

        </ImageView>

        <ImageView
            android:id="@+id/get_instagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/instagram"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center">

        </ImageView>


        <ImageView
            android:id="@+id/get_website"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/website"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_gravity="center">

        </ImageView>


    </LinearLayout>

    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_website"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/colorProfile"
        android:text="Send Message"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:padding="12dp"
        android:textSize="18sp"
        />

</RelativeLayout>